[user]
    name = Steven Eisinger
    email = steven.a.eisinger@gmail.com

[core]
    pager = delta

[column]
    ui = auto

[branch]
    sort = -committerdate

[tag]
    sort = version:refname

[init]
    defaultBranch = main

[advice]
    detachedHead = false

[push]
    default = simple
    autoSetupRemote = true
    followTags = true

[fetch]
    prune = true
    pruneTags = true
    all = true

[interactive]
    diffFilter = delta --color-only

[delta]
    syntax-theme = base16   # color theme
    line-numbers = true
    navigate = true         # use n and N to move between diff sections
    dark = true
    map-styles = bold purple => syntax magenta, bold cyan => syntax blue

[merge]
    conflictstyle = diff3

[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true

[help]
    autocorrect = prompt

[commit]
    verbose = true

[rerere]
    enabled = true
    autoupdate = true

[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[alias]
    p = pull
    u = push
    c = commit
    a = add
    d = diff
    s = status
    r = rebase
    m = merge
    b = branch
    t = tag
    f = fetch
    l = log
    ll = dirs
    ch = checkout

    # Show activity on the changes to the repository
    activity = for-each-ref --sort=committerdate refs/remotes/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset)%(upstream:track) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'

    # A pretty log format
    tree = log --all --decorate --oneline --graph

    # Checkout the latest tag
    latest =!git fetch --tags && git checkout $(git describe --tags $(git rev-list --tags --max-count=1))

    # Get the short hash of the current commit
    hash = rev-parse --short HEAD

    # Get the branches of all 1st level subdirs
    dirs = "!sh -c 'for i in */; do (cd $i && echo -n \"${i}: \" && echo -n $(git rev-parse --abbrev-ref HEAD 2> /dev/null) && test -n \"$(git status --porcelain 2> /dev/null)\" && echo -n \" *\"); echo; done'"

[page]
    diff = delta
    show = delta
    log = delta
    blame = delta
    reflog = delta
